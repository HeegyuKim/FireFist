<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unipi.kr.firefist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="20"
        android:targetSdkVersion="20" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/firefist_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="unipi.kr.firefist.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyStyle" >
        </activity>
        <activity
            android:name="unipi.kr.firefist.MeasuringActivity"
            android:label="@string/title_activity_measuring"
            android:theme="@style/MyStyle" >
        </activity>
        <activity
            android:name="unipi.kr.firefist.SplashActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="unipi.kr.firefist.GameActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>